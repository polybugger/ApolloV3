<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:gravity="right"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@+id/fragment_class_info_layout"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/new_schedule_background_layout"
            android:elevation="@dimen/low_elevation"
            android:background="@drawable/bg_rounded_rect_fab"
            android:layout_marginTop="@dimen/recycler_view_item_margin_top"
            android:layout_marginRight="@dimen/recycler_view_item_margin_right"
            android:layout_marginBottom="@dimen/recycler_view_item_margin_bottom_half"
            android:layout_marginLeft="@dimen/recycler_view_item_margin_left"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/new_schedule_clickable_layout"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:paddingTop="@dimen/recycler_view_content_padding_top"
                    android:paddingBottom="@dimen/recycler_view_content_padding_bottom"
                    android:paddingLeft="@dimen/recycler_view_content_padding_left"
                    android:textColor="@color/bg_color_white"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold"
                    android:text="@string/new_class_schedule_fab_label" />

                <ImageView
                    android:contentDescription="@null"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/recycler_view_content_padding_right"
                    android:src="@drawable/ic_schedule_white_36dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/new_grade_breakdown_background_layout"
            android:elevation="@dimen/low_elevation"
            android:background="@drawable/bg_rounded_rect_fab"
            android:layout_marginTop="@dimen/recycler_view_item_margin_top_half"
            android:layout_marginRight="@dimen/recycler_view_item_margin_right"
            android:layout_marginBottom="@dimen/recycler_view_item_margin_bottom_half"
            android:layout_marginLeft="@dimen/recycler_view_item_margin_left"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/new_grade_breakdown_clickable_layout"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:paddingTop="@dimen/recycler_view_content_padding_top"
                    android:paddingBottom="@dimen/recycler_view_content_padding_bottom"
                    android:paddingLeft="@dimen/recycler_view_content_padding_left"
                    android:textColor="@color/bg_color_white"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold"
                    android:text="@string/new_grade_breakdown_fab_label" />

                <ImageView
                    android:contentDescription="@null"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/recycler_view_content_padding_right"
                    android:src="@drawable/ic_assessment_white_36dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/new_note_background_layout"
            android:elevation="@dimen/low_elevation"
            android:background="@drawable/bg_rounded_rect_fab"
            android:layout_marginTop="@dimen/recycler_view_item_margin_top_half"
            android:layout_marginRight="@dimen/recycler_view_item_margin_right"
            android:layout_marginBottom="@dimen/recycler_view_item_margin_bottom"
            android:layout_marginLeft="@dimen/recycler_view_item_margin_left"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/new_note_clickable_layout"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:paddingTop="@dimen/recycler_view_content_padding_top"
                    android:paddingBottom="@dimen/recycler_view_content_padding_bottom"
                    android:paddingLeft="@dimen/recycler_view_content_padding_left"
                    android:textColor="@color/bg_color_white"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold"
                    android:text="@string/new_note_fab_label" />

                <ImageView
                    android:contentDescription="@null"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/recycler_view_content_padding_right"
                    android:src="@drawable/ic_event_note_white_36dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_class_items_layout"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/new_class_item_background_layout"
            android:elevation="@dimen/low_elevation"
            android:background="@drawable/bg_rounded_rect_fab"
            android:layout_marginTop="@dimen/recycler_view_item_margin_top"
            android:layout_marginRight="@dimen/recycler_view_item_margin_right"
            android:layout_marginBottom="@dimen/recycler_view_item_margin_bottom"
            android:layout_marginLeft="@dimen/recycler_view_item_margin_left"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/new_class_item_clickable_layout"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:paddingTop="@dimen/recycler_view_content_padding_top"
                    android:paddingBottom="@dimen/recycler_view_content_padding_bottom"
                    android:paddingLeft="@dimen/recycler_view_content_padding_left"
                    android:textColor="@color/bg_color_white"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="bold"
                    android:text="@string/new_class_item_fab_label" />

                <ImageView
                    android:contentDescription="@null"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/recycler_view_content_padding_right"
                    android:src="@drawable/ic_today_white_36dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
