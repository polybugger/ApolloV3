<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@+id/background_layout"
        android:elevation="@dimen/low_elevation"
        android:background="@drawable/bg_rounded_rect_0"
        android:layout_margin="@dimen/dialog_fragment_margin"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/recycler_view_content_padding_top"
        android:paddingRight="@dimen/recycler_view_content_padding_right"
        android:paddingBottom="@dimen/recycler_view_content_padding_bottom"
        android:paddingLeft="@dimen/recycler_view_content_padding_left">

        <Button
            android:id="@+id/item_date_button"
            android:hint="@string/item_date_hint"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size" />

        <Spinner
            android:id="@+id/item_type_spinner"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/edit_text_spacer_top"
            android:textSize="@dimen/normal_text_size" />

        <EditText
            android:id="@+id/description_edit_text"
            android:hint="@string/description_hint"
            android:inputType="text|textCapSentences"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/edit_text_spacer_top"
            android:textSize="@dimen/normal_text_size" />
        <TextView
            android:id="@+id/error_text_view"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/edit_text_text_view_padding_left"
            android:paddingRight="@dimen/edit_text_text_view_padding_right"
            android:textColor="@color/color_error"
            android:textSize="@dimen/small_text_size" />

        <CheckBox
            android:id="@+id/check_attendance_check_box"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/edit_text_spacer_top"
            android:text="@string/check_attendance_check_box_label"
            android:textSize="@dimen/normal_text_size" />

        <CheckBox
            android:id="@+id/record_scores_check_box"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/edit_text_spacer_top"
            android:text="@string/record_scores_check_box_label"
            android:textSize="@dimen/normal_text_size" />

        <EditText
            android:id="@+id/perfect_score_edit_text"
            android:hint="@string/perfect_score_hint"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:visibility="gone" />
        <TextView
            android:id="@+id/perfect_score_error_text_view"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/edit_text_text_view_padding_left"
            android:paddingRight="@dimen/edit_text_text_view_padding_right"
            android:textColor="@color/color_error"
            android:textSize="@dimen/small_text_size"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/record_submissions_check_box"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/edit_text_spacer_top"
            android:text="@string/record_submissions_check_box_label"
            android:textSize="@dimen/normal_text_size" />

        <Button
            android:id="@+id/submission_due_date_button"
            android:hint="@string/submission_due_date_hint"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:visibility="gone" />
        <TextView
            android:id="@+id/submission_due_date_error_text_view"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/edit_text_text_view_padding_left"
            android:paddingRight="@dimen/edit_text_text_view_padding_right"
            android:textColor="@color/color_error"
            android:textSize="@dimen/small_text_size"
            android:visibility="gone" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
