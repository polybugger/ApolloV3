<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_nav_header"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/nav_header_padding">

    <ImageView
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/nav_header_image_spacing"
        android:layout_width="wrap_content"
        android:src="@drawable/img_nav_header" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/app_name_title"
        android:textSize="@dimen/large_text_size" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/app_name_sub_title"
        android:textSize="@dimen/normal_text_size" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/app_version"
        android:textSize="@dimen/small_text_size" />

</LinearLayout>
