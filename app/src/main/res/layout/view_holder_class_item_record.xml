<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clipToPadding="false"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/background_layout"
        android:elevation="@dimen/low_elevation"
        android:background="@drawable/bg_rounded_rect_0"
        android:layout_marginTop="@dimen/recycler_view_item_margin_top"
        android:layout_marginRight="@dimen/recycler_view_item_margin_right"
        android:layout_marginBottom="@dimen/recycler_view_item_margin_bottom"
        android:layout_marginLeft="@dimen/recycler_view_item_margin_left"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_text_view"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingTop="@dimen/recycler_view_content_padding_top"
            android:paddingRight="@dimen/recycler_view_content_padding_right"
            android:paddingLeft="@dimen/recycler_view_content_padding_left"
            android:textSize="@dimen/large_text_size"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/attendance_radio_group"
            android:layout_marginTop="@dimen/radio_button_spacer_top_half"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/recycler_view_content_padding_right"
            android:paddingLeft="@dimen/recycler_view_content_padding_left"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/present_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normal_text_size"
                android:text="@string/present" />

            <RadioButton
                android:id="@+id/absent_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normal_text_size"
                android:text="@string/absent" />

        </RadioGroup>

        <EditText
            android:id="@+id/score_edit_text"
            android:hint="@string/score_hint"
            android:inputType="number"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/recycler_view_content_padding_right"
            android:layout_marginLeft="@dimen/recycler_view_content_padding_left"
            android:textSize="@dimen/normal_text_size" />

        <Button
            android:id="@+id/submission_date_button"
            android:hint="@string/submission_date_hint"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/recycler_view_content_padding_right"
            android:layout_marginLeft="@dimen/recycler_view_content_padding_left"
            android:textSize="@dimen/normal_text_size" />

        <EditText
            android:id="@+id/remarks_edit_text"
            android:hint="@string/remarks_hint"
            android:inputType="text|textCapSentences"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/recycler_view_content_padding_right"
            android:layout_marginBottom="@dimen/recycler_view_content_padding_bottom"
            android:layout_marginLeft="@dimen/recycler_view_content_padding_left"
            android:textSize="@dimen/normal_text_size" />

    </LinearLayout>

</LinearLayout>
