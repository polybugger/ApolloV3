<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@+id/background_layout"
        android:elevation="@dimen/low_elevation"
        android:background="@drawable/bg_rounded_rect_0"
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/dialog_fragment_margin"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/recycler_view_content_padding_top"
        android:paddingRight="@dimen/recycler_view_content_padding_right"
        android:paddingBottom="@dimen/recycler_view_content_padding_bottom"
        android:paddingLeft="@dimen/recycler_view_content_padding_left">

        <EditText
            android:id="@+id/edit_text"
            android:background="@android:color/transparent"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="@dimen/normal_text_size" />
        <TextView
            android:id="@+id/error_text_view"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@color/color_error"
            android:textSize="@dimen/small_text_size" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/image_button_0"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:padding="@dimen/button_padding"
                android:src="@drawable/ic_bg_0_24dp" />

            <ImageButton
                android:id="@+id/image_button_1"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/image_button_0"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:padding="@dimen/button_padding"
                android:src="@drawable/ic_bg_1_24dp" />

            <ImageButton
                android:id="@+id/image_button_2"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/image_button_1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:padding="@dimen/button_padding"
                android:src="@drawable/ic_bg_2_24dp" />

            <ImageButton
                android:id="@+id/image_button_3"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/image_button_2"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:padding="@dimen/button_padding"
                android:src="@drawable/ic_bg_3_24dp" />

            <ImageButton
                android:id="@+id/image_button_4"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/image_button_0"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:padding="@dimen/button_padding"
                android:src="@drawable/ic_bg_4_24dp" />

            <ImageButton
                android:id="@+id/image_button_5"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_below="@id/image_button_1"
                android:layout_toRightOf="@id/image_button_4"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:padding="@dimen/button_padding"
                android:src="@drawable/ic_bg_5_24dp" />

            <ImageButton
                android:id="@+id/image_button_6"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_below="@id/image_button_2"
                android:layout_toRightOf="@id/image_button_5"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:padding="@dimen/button_padding"
                android:src="@drawable/ic_bg_6_24dp" />

            <ImageButton
                android:id="@+id/image_button_7"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_below="@id/image_button_3"
                android:layout_toRightOf="@id/image_button_6"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/button_margin"
                android:padding="@dimen/button_padding"
                android:src="@drawable/ic_bg_7_24dp" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
